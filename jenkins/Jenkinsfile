pipeline {

    agent {
        docker {
            image 'jenkins/jenkins:lts'
            args '-u root --privileged -v /var/run/docker.sock:/var/run/docker.sock -v /usr/bin/docker:/usr/bin/docker'
        }
    }

    environment {
        REGISTRY = "localhost:5001"
        USER_IMAGE = "${REGISTRY}/user-service:latest"
        ORDER_IMAGE = "${REGISTRY}/order-service:latest"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/fayizsaleem/devops-platform.git'
            }
        }

        stage('Build & Test - User Service') {
            steps {
                dir('services/user-service') {
                    sh 'docker build -t user-service:local .'
                }
            }
        }

        stage('Build & Test - Order Service') {
            steps {
                dir('services/order-service') {
                    sh 'docker build -t order-service:local .'
                    sh 'npm test || true'
                }
            }
        }

        stage('Push Images to Local Registry') {
            steps {
                sh '''
                    docker tag user-service:local $USER_IMAGE
                    docker push $USER_IMAGE

                    docker tag order-service:local $ORDER_IMAGE
                    docker push $ORDER_IMAGE
                '''
            }
        }

        stage('Deploy with Terraform') {
            steps {
                dir('terraform') {
                    sh '''
                        terraform init
                        terraform apply -auto-approve
                    '''
                }
            }
        }
    }

    post {
        always {
            sh 'docker image prune -f || true'
        }
    }
}

