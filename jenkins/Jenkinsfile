pipeline {

    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/fayizsaleem/devops-platform.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Install Terraform') {
            steps {
                sh '''
                    echo "üöÄ Installing Terraform..."

                    sudo apt-get update -y
                    sudo apt-get install -y curl unzip

                    curl -fsSL https://releases.hashicorp.com/terraform/1.5.7/terraform_1.5.7_linux_amd64.zip -o terraform.zip
                    sudo unzip -o terraform.zip -d /usr/local/bin/
                    sudo chmod +x /usr/local/bin/terraform
                    terraform -version
                '''
            }
        }

        stage('Build User Service') {
            steps {
                dir('services/user-service') {
                    sh 'docker build -t user-service:local .'
                }
            }
        }

        stage('Build Order Service') {
            steps {
                dir('services/order-service') {
                    sh '''
                        docker build -t order-service:local .
                        echo "‚ö†Ô∏è Skipping npm test (no node on host)"
                    '''
                }
            }
        }

        stage('Push Images') {
            steps {
                sh '''
                    echo "üì¶ Pushing to Local Registry..."

                    docker tag user-service:local localhost:5001/user-service:latest
                    docker push localhost:5001/user-service:latest

                    docker tag order-service:local localhost:5001/order-service:latest
                    docker push localhost:5001/order-service:latest
                '''
            }
        }

        stage('Deploy Infra') {
            steps {
                sh '''
                    echo "üöÄ Deploying Terraform Infra..."
                    cd terraform
                    terraform init
                    terraform apply -auto-approve
                '''
            }
        }
    }
}
